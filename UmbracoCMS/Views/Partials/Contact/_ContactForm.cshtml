@inherits UmbracoViewPage<ContactViewModel>
@using UmbracoCMS.Models

<div id="form-outer">
    @using (Ajax.BeginForm("SubmitForm", "Contact", new AjaxOptions()
    {
        UpdateTargetId = "form-result",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "contactForm.ShowResult",
        OnFailure = "contactForm.ShowResult",
    }, new { id = "contact-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <div class="col-xs-3">
                @Html.LabelFor(m => m.FirstName)
            </div>
            <div class="col-xs-9">
                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "FirstName" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-3">
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="col-xs-9">
                @Html.TextBoxFor(m => m.LastName, new { placeholder = "LastName" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-3">
                @Html.LabelFor(m => m.EmailAddress)
            </div>
            <div class="col-xs-9">
                @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "Email" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-3">
                @Html.LabelFor(m => m.Message)
            </div>
            <div class="col-xs-9">
                @Html.TextAreaFor(m => m.Message, new { placeholder = "Message", row = 4 })
            </div>
        </div>
        <button class="contact-submit">Submit</button>
    }
</div>
<div id="form-results"></div>